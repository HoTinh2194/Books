<style type="text/css">
    #Datmua a {
        clear: both;
        background-color: red;
        color: white;
        width: 120px;
        height: 35px;
        display: block;
        float: right;
        text-align: center;
        padding-top: 10px;
        text-decoration: none;
        font-weight: bold;
    }

        #Datmua a:hover {
            background-color: gray;
            color: red;
        }
</style>


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>CHI TIẾT SÁCH </h2>
<div>
    <div style="width:40%; float:left;border-left:dotted 1px; border-color:azure">
        <img src="~/img/@Model.Hinhminhhoa" width="100%" />
    </div>
    <div style="width:60%; float:left; padding:10px">
        <h3 style=" color:red"> Tên sách : @Model.Tensach</h3>
        <p style="text-align:justify; color:white"><span>Mô tả :</span> @Model.Mota</p>
        <p style="font-weight:bold; color:white">Giá bán : <span style="color:red; font-size:16pt">@Model.Dongia VND</span></p>
    </div>
    <div>
        <div id="Datmua">
            <a href="@Url.Action("ThemGiohang","Giohang",new { @iMasach = @Model.Masach, @strURL = Request.Url.ToString()})">
                Đặt mua
            </a>
        </div>
    </div>
</div>
