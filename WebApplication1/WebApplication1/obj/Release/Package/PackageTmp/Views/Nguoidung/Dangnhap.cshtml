
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h4 style="color:cadetblue; text-align:center">@ViewBag.Thongbao</h4>
<table align="center">
    <h3 style="text-align:center; color:red">ĐĂNG NHẬP</h3>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px;color:red">
            <td style="color:white">Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px;color:red">
            <td style="color:white;text-align:right">Mật khẩu:</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="Submit" value="ĐĂNG NHẬP"/>
            </td>
        </tr>
    }
</table>
